:javascript
  $(function() {
    $(window).on('load scroll', function() {
      // ページ読み込み時とスクロール時に発火させる。
      var scrollPos = $(this).scrollTop();
      // ブラウザ画面のスクロールした位置（スクロール量）を取得し変数に代入する。
      if ( scrollPos > 30 ) {
        // もしスクロールした位置が100pxより大きければ
        $('.index-header').addClass('index-header-resize');
      } else {
        $('.index-header').removeClass('index-header-resize');
      }
    });
  });	


  $(function(){
    // ページ内のスクロール処理
    $('.scroll-button').click(function(){
    // .btn_sampleをクリックした際に
      var i = $('.scroll-button').index(this)
      // クリックした番号(index)を取得し変数「i」に格納
      var p = $('.content').eq(i).offset().top;
      // 「i」に格納した番号と同じ番号のclass「content」の「top」の位置を取得
      // 取得した「top」の位置は変数「p」に格納する
      $('html,body').animate({scrollTop:p - 150},'fast');
      return false;
      // animateを使って変数「p」で取得した「top」の位置までスクロールする
    });
    // ページ上部へ移動する
    $('.home-button').click(function(){
      $('html,body').animate({scrollTop: 0},'fast');
      return false;
      // ページ上部へスクロールし戻る処理
      // 特に位置情報を渡す必要はないためscrollTopの値を0とする
    });
  });